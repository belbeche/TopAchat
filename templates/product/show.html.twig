{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Datetime</th>
                <td>{{ product.datetime ? product.datetime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Date_fin_garantie</th>
                <td>{{ product.dateFinGarantie ? product.dateFinGarantie|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Commentaires</th>
                <td>{{ product.commentaires }}</td>
            </tr>
            <tr>
                <th>Manuel</th>
                <td>{{ product.manuel ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('product_index') }}">back to list</a>

    <a href="{{ path('product_edit', {'id': product.id}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
