{% extends 'base.html.twig' %}

{% block title %}Product
{% endblock %}

{% block body %}
	<h1>Produit :
		{{ product.name }}
	</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>RÃ©ference</th>
				<td>{{ product.id }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ product.name }}</td>
			</tr>
			<tr>
				<th>Datetime</th>
				<td>{{ product.datetime ? product.datetime|date('d-m-Y H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Price</th>
				<td>{{ product.price }}</td>
			</tr>
			<tr>
				<th>Date_fin_garantie</th>
				<td>{{ product.dateFinGarantie ? product.dateFinGarantie|date('d-m-Y H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Commentaires</th>
				<td>{{ product.commentaires }}</td>
			</tr>
			<tr>
				<th>Manuel</th>
				<td>{{ product.manuel ? 'Inclus' : 'Non' }}</td>
			</tr>
			<tr>
				<th>Image</th>
				{% if product.filename %}
					<a href="/images/products/{{ product.filename }}"><img src="/images/products/{{ product.filename }}" class="card-img-top" style="width:100%;height:100%;"></a>
				{% endif %}
			</tr>
		</tbody>
	</table>

	<a href="{{ path('product_index') }}">Retour</a>

	<a href="{{ path('product_edit', {'id': product.id}) }}">Modifier</a>

	{{ include('product/_delete_form.html.twig') }}
{% endblock %}
