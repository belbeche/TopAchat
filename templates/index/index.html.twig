{% extends 'base.html.twig' %}

{% block title %}TopAchat
{% endblock %}

{% block body %}
	<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>

	<main>
		{% if not app.user %}
			<div class="container-fluid" id="formulaire_connexion">
				<div class="row g-0">
					<div class="col">
						<div class="login d-flex align-items-center py-5">
							<div class="container">
								<div class="row">
									<div class="col-md-9 col-lg-8 mx-auto">
										<h3 class="login-heading mb-4">Bienvenue sur TopAchat</h3>
										<!-- Sign In Form -->
										<form action="{{ path('api_login') }}" method="POST">
											<div class="form-floating mb-3">
												<input type="email" class="form-control" id="email" placeholder="name@example.com" name="email">
												<label for="email">Adresse email</label>
											</div>
											<div class="form-floating mb-3">
												<input type="password" class="form-control" id="password" placeholder="Mot de passe..." name="password">
												<label for="password">Mot de passe</label>
											</div>

											<div class="form-check mb-3">
												<input class="form-check-input" type="checkbox" value="" id="rememberPasswordCheck">
												<label class="form-check-label" for="rememberPasswordCheck">
													Se souvenir de moi
												</label>
											</div>

											<div class="d-grid">
												<button class="btn btn-lg btn-primary btn-login text-uppercase fw-bold mb-2" type="submit" id="login-submit">Connexion</button>
												<div class="text-center">
													<a class="small" href="#">Mot de passe oublié ?</a>
												</div>
											</div>
										</form>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>

			<script>
				$('#login-submit').click(function (e) {

e.preventDefault();
let email = $('#email').val();
let password = $('#password').val();
let data = JSON.stringify({email: email, password: password});
$.ajax({
url: '{{ path('api_login') }}',
type: 'POST',
contentType: "application/json",
dataType: 'json',
data: data,
success: function (data, status) {
console.log("DATA", data);
return data;
}
});
});
			</script>
		{% else %}
			<section class="py-5 text-center container" id="mon_super_container">
				<div class="row py-lg-5">
					<div class="col-lg-6 col-md-8 mx-auto">
						<h5 class="fw-light">Connecté sous :
							{{ app.user.username }}</h5>
						<p>
							<hr>
							<a href="{{path('product_index')}}">Voir mon bizness</a>
						</p>
					</p>
				</div>
			</div>
		</section>
	{% endif %}
	<!-- Car Section Begin -->
	<section class="car spad">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<div class="section-title">
						<span>Notre collection</span>
						<h2>Des voitures de qualitées et pas cher !</h2>
					</div>
				</div>
				{% for product in products %}
					<div class="col-lg-3 col-md-4 col-sm-6 mix">
						<div class="car__item">
							<div class="car__item__pic__slider owl-carousel">
								{% if product.filename %}
									<a href="/images/products/{{ product.filename }}"><img src="/images/products/{{ product.filename }}" class="card-img-top" style="width: 100%;height:auto;"></a>
								{% endif %}
							</div>
							<div class="car__item__text">
								<div class="car__item__text__inner">
									<div class="label-date">
										<i class="far fa-calendar-alt"></i>
										{{ product.datetime|date('d-m-Y')}}
										à
										{{ product.datetime|date('H:i:s') }}
										<small>
											<i class="fas fa-calendar-times"></i>
											{{ product.datefingarantie|date('d-m-Y') }}
											à
											{{ product.datefingarantie|date('H:i:s') }}
										</small>
									</div>
									<h5>
										<a href="{{path('show_products', {id: product.id})}}">Produit:
											{{ product.name }}</a>
									</h5>
									<ul>
										<li>
											<p class=" text-muted">
												<i class="fas fa-barcode"></i>
												{{ product.category.name}}</p>
										</li>
										<li>
											<p class="card-text">{{ product.commentaires }}</p>
										</li>
									</ul>
								</div>
								<div class="car__item__price">
									<span class="car-option">
										{% if product.favoris %}
											<span class="car-option">En Favoris</span>
										{% else %}
											<a href="{{path('addFavoris', {id: product.id})}}">
												<span class="car-option">Ajouté</span>
											</a>
										{% endif %}
									</span>
								</div>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</section>
	<!-- Car Section End -->
	{# display navigation #}
	<div class="pagination">
		{{ knp_pagination_render(products) }}
	</div>
</div></main>{% endblock %}
