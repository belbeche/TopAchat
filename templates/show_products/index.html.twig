{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

	<div class="container" style="margin-top:20px;">
		<div class="row">
			<div class="col-md-6" style="background-color:white;border-radius: 10px;height:50em;">
				<a href="/images/products/{{ product.thumbnail }}"><img src="/images/products/{{ product.thumbnail }}" style="width:100%;height:auto;"></a>
				<hr>
				<div class="col-md-3" style="float:right;">
					<i class="fas fa-map-marked-alt"></i>
					{{ product.lieu }}<br>
					<i class="fas fa-euro-sign"></i>
					{{ product.price | number_format(0, ',', ' ') }}
				</div>
				<h1 class="display-4">{{ product.name }}</h1>
				<p class="lead">{{ product.commentaires }}</p>
				<p>
					<i class="far fa-calendar-alt"></i>
					{{ product.datetime|date('d-m-Y') }}
					à
					{{ product.datetime|date('H:i:s') }}
				</p>
				<p>
					<i class="fas fa-calendar-times"></i>
					{{ product.datefingarantie|date('d-m-Y') }}
					à
					{{ product.datefingarantie|date('H:i:s') }}
				</p>
				<p>
					<i class="fas fa-barcode"></i>
					{{ product.category.name }}
				</p>
			</div>
			<div class="col-md-6">
				<div class="car__item__price">
					<span>
						{% if product.favoris %}
							<a class="btn btn-success">Favoris</a>
						{% else %}
							<a href="{{path('addFavoris', {id: product.id})}}" class="btn btn-secondary">
								Ajouter aux favoris
							</a>
						{% endif %}
					</span>
				</div>
			</div>
		</div>
	</div>


{% endblock %}
